{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend REST API Server",
  "private": true,
  "scripts": {
    "watch": "nodemon",
    "start": "nodemon",
    "prestart": "rimraf dist && tsc",
    "start:test": "cross-env NODE_ENV=testing node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "build": "npm run lint && tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nest-middlewares/express-session": "^5.1.0",
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/swagger": "^2.0.2",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/typeorm": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "async-redis": "^1.1.4",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "config": "^1.30.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "moment": "^2.22.2",
    "mongodb": "^2.2.35",
    "mysql": "^2.15.0",
    "nunjucks": "^3.1.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.0",
    "typeorm": "^0.2.25",
    "typescript": "^2.8.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/fs-extra": "^5.0.1",
    "@types/glob": "^5.0.35",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.4.7",
    "@types/nunjucks": "^3.0.0",
    "@types/passport-jwt": "^2.0.24",
    "@types/passport-local": "^1.0.33",
    "@types/rx": "^4.1.1",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "cross-env": "^5.1.3",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^6.0.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
